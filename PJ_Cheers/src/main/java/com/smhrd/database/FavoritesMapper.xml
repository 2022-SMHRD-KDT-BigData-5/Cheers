<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.domain.FavoritesDAO">
	
	<insert id="insertFav"
		parameterType="com.smhrd.domain.Favorites">
		insert into favorites values (fav_no_seq.nextval, #{member_id}, #{recipe_no}, sysdate)
	</insert>
	
	<select id="getFav" parameterType="String" resultType="com.smhrd.domain.Favorites">
		select * from Favorites where member_id = #{member_id}
	</select>

</mapper>